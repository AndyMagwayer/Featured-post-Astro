<style lang="scss">
  @import "../../assets//styles/variables.scss";

  .user-profile-hero {
   
    background-color: $gray-200;

    .wrapper {
        padding: 208px 0 128px;
      display: flex;
      gap: 32px;
      align-items: center;
      position: relative;

      &::before{
      content: '';
      position: absolute;
      width: 100%;
      bottom: 0;
      left: 0;
      height: 24px;
      background-color: $primary;
      }

      &::after{
      content: '';
      position: absolute;
      width: 30%;
      bottom: 0;
      right: 0;
      height: 24px;
      background-color: $accent;
      }

      .user-image {
        width: 251px;
        height: 294px;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }

      .user-bio {
        max-width: 750px;


        .text{
            margin: 24px 0;
        }

        .sci{
            display: flex;
            gap: 16px;


             a:hover{
                color: $primary;
                transition: 0.3s;
                
            }
        }
      }
    }
  }
</style>
